private final static String pdfFile = "C:\\Users\\SCS\\Desktop\\StudentList.pdf";

    public static void main( String[] args ) throws IOException {
        System.out.println("Hello, I am Kopi Lim \nThis is 1st Method using PDFBox" );

        //pdfBoxMethod, 1st Method
        int wordCount1 = 0;
        int charCount1 = 0;
        try(PDDocument document1 = PDDocument.load(new File(pdfFile))){
            document1.getClass();
            if(!document1.isEncrypted()){
                PDFTextStripperByArea stripper1 = new PDFTextStripperByArea();
                stripper1.setSortByPosition(true);
                PDFTextStripper tStripper = new PDFTextStripper();
                String pdfFileInText = tStripper.getText(document1);
                //System.out.println("Text:" + st);

                // split by whitespace
                String lines[] = pdfFileInText.split("\\r\n");
                for (String line : lines) {
                    //start
                    String[] words = line.split(" ");
                    //Updating the wordCount

                    //wordCount1 = wordCount1 + words.length;
                    //Iterating each word
                    for (String word : words) {
                        //Updating the charCount
                        charCount1 += word.length();
                    }//end
                }//End For

                //Method 2
                System.out.println("sad " + countWordsUsingSplit(pdfFileInText)); //This
                System.out.println("Number Of Chars In A File : " + charCount1);
                //System.out.println("Number Of Words In A File : " + wordCount1);
                document1.close();
            }

        }//End Try
        
        
        public static int countWordsUsingSplit(String text) {
        if (text == null || text.isEmpty()) {
            return 0;
        }

        String[] words = text.split("\\s+");
        return words.length;
    }
